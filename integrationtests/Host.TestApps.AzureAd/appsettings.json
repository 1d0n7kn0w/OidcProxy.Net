{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Redis": "localhost" 
  },
  "AzureAd": {
    "ClientId": "{yourClientId}",
    "ClientSecret": "{yourClientSecret}",
    "Scopes": [
      "openid", "profile", "offline_access", "https://test.onmicrosoft.com/api/test/weatherforecast.read"
    ]
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api": {
        "ClusterId": "api",
        "Match": {
          "Path": "/api/{*any}"
        }
      }
    },
    "Clusters": {
      "api": {
        "Destinations": {
          "api/node1": {
            "Address": "http://localhost:8080/"
          }
        }
      }
    }
  }
}
